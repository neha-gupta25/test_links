<!DOCTYPE html>
<html lang="en">
<head>
  <title>Links</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
		<% if flash[:notice] %>
		  <div class="notice" id="flash"><%= flash[:notice] %></div>
		<% end %>
		<%= yield %>

		</body>
	</div>
</html>

<script type="text/javascript">
$(document).ready(function(){
  setTimeout(function(){
    $('#flash').remove();
  }, 5000);
 })
</script>
