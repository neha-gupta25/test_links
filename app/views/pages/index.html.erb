<% if @pages.present? %>
  <div class="container">
    <div class="row">
      <h2><u>List of pages</u></h2>
    <div class="row">
      <div class="col-md-6">
        <%= link_to 'Add page', new_page_path, class: 'btn btn-primary' %>
      </div>
    </div>
    <br>

    <div class="table-responsive">
      <table class="table"> 
        <tr>
          <th>Page name</th>
          <th>Links</th>
        </tr>
        
        <% @pages.each do |page| %>
          <tr>
            <td>
            <%= link_to page_path(page) do %><%= "#{page.name}"%><%end%></td>
            <td>
              <%= link_to 'Organic Links', organic_page_path(page), class: 'btn btn-info btn-sm' %>
              <%= link_to 'PPC Links', ppc_page_path(page), class: 'btn btn-success btn-sm' %>
              <%= link_to 'Delete', page_path(page), method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<%else %>
  <div class="container">
    <h2>There are no pages. please click below button to add pages.</h2>
    <div class="row">
      <div class="col-md-6 col-md-offset-4">
        <%= link_to 'Add page', new_page_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
